# Environment Variables Template
# Copy this file to .env and fill in the actual values

# ========================================
# Server Configuration
# ========================================

# Port on which the server runs
PORT=5050

# Environment: development or production
NODE_ENV=development

# Session secret for express-session
SESSION_SECRET=your-secret-key-here-change-in-production

# ========================================
# Google OAuth Configuration
# ========================================
# Get credentials from https://console.cloud.google.com/

# Google OAuth Client ID
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Base URL where server is reachable (used for OAuth redirect)
# Example: http://localhost:5050 (dev) or https://yourdomain.com (production)
BASE_URL=http://localhost:5050

# Full Google OAuth redirect URI (should match Google Cloud Console)
GOOGLE_REDIRECT_URI=http://localhost:5050/auth/google/callback

# ========================================
# Database Configuration (Optional)
# ========================================
# If using MongoDB or other database

# MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_URI=

# Database name
DB_NAME=typewritepro

# Database collections
DB_COLLECTION_USERS=users
DB_COLLECTION_SESSIONS=sessions

# ========================================
# Application Settings
# ========================================

# Enable Google Drive integration (true/false)
ENABLE_DRIVE_INTEGRATION=true

# Enable document persistence (true/false)
ENABLE_PERSISTENCE=true

# Optional: Base64-encoded 32-byte key used to encrypt OAuth tokens at rest
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
OAUTH_TOKEN_ENCRYPTION_KEY=

# ========================================
# Production-Only Settings
# ========================================

# SSL Certificate path (production)
# SSL_CERT_PATH=/path/to/cert.pem

# SSL Key path (production)
# SSL_KEY_PATH=/path/to/key.pem

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
